{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["error", { "code": 150 }],
        "curly": "off",
        "no-non-null-assertion": "off",
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "import/no-cycle": "off",
        "no-param-reassign": "off",
        "no-console": "off",
        "no-continue": "off",
        "no-redeclare": "off"
    }
}
